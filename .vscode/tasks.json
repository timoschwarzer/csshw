{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo fmt; cargo build;",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo fmt & build"
		},
		{
			"type": "shell",
			"command": "cargo fmt; cargo build; if ($?) { .\\dissh.exe foo bar }",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: fmt, build and run"
		}
	]
}